<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Navigation Header -->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:background">@drawable/nav_page</item> -->
        <item name="android:background">#FFE1E8EB</item>
    </style>

    <style name="Splash"
        parent="AppTheme">
        <item name="android:windowBackground">@mipmap/lunch</item>
    </style>

    <style name="dialogButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_39383b</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">7dp</item>
    </style>

    <!-- 红色实心长按钮 -->
    <style name="common_btn_red_long">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/common_btn_red_long_bg</item>
        <item name="android:layout_height">@dimen/common_size_94px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/common_size_40px</item>
        <item name="android:layout_marginRight">@dimen/common_size_40px</item>
    </style>

    <style name="BottomToTopAnim"
        parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_in_bottom</item>
        <item name="@android:windowExitAnimation">@anim/dialog_out_bottom</item>
    </style>

    <!--登陆相关edittext格式-->
    <style name="user_text_style">
        <item name="android:textSize">@dimen/common_text_size_28px</item>
        <item name="android:textColor">@color/color_454545</item>
        <item name="android:textColorHint">@color/color_b2b0b0</item>
    </style>

    <!-- 登陆长按钮 -->
    <style name="common_btn_long">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/common_text_size_30px</item>
        <item name="android:background">@drawable/selector_submit_bg</item>
        <item name="android:layout_height">@dimen/common_size_92px</item>
        <item name="android:layout_width">@dimen/common_size_492px</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- 内容间分割线 -->
    <style name="horizontal_divider_content">
        <item name="android:layout_height">@dimen/common_line_width</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_ececec</item>
    </style>

    <!-- 内容间分割线 -->
    <style name="vertical_divider_content">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/common_line_width</item>
        <item name="android:background">@color/color_text4_8d8d8d</item>
    </style>

    <style name="common_checkbox"
        parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/temp_common_checkbox_selector</item>
    </style>

    <style name="lyndonding.Dialog.None"
        parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="menu_item">
        <item name="android:textSize">@dimen/common_text_size_32px</item>
        <item name="android:textColor">@color/color_39383b</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light"/>

</resources>
