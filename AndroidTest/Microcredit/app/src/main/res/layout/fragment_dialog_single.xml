<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/common_size_48px"
    android:paddingLeft="@dimen/common_size_30px"
    android:paddingRight="@dimen/common_size_30px"
    >

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_108px"
        android:layout_marginTop="@dimen/common_size_18px"
        android:background="@drawable/shape_filter_single"
        android:gravity="center"
        android:text="@android:string/cancel"
        android:textSize="@dimen/common_text_size_32px"
        android:textColor="@color/color_439df8"
        android:layout_alignParentBottom="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_filter_single"
        android:orientation="vertical"
        android:layout_above="@id/tv_cancel"
        >

        <TextView
            android:id="@+id/tv_no_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_108px"
            android:gravity="center"
            android:text="不限"
            android:textSize="@dimen/common_text_size_32px"
            android:textColor="@color/color_439df8"
            />

        <View
            android:id="@+id/view_divider"
            style="@style/horizontal_divider_content"
            android:background="@color/color_dddddd"
            />

        <ListView
            android:id="@+id/filter_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/color_dddddd"
            android:dividerHeight="@dimen/common_line_width"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            >
        </ListView>
    </LinearLayout>




</RelativeLayout>
