<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:layout_height="match_parent">

    <com.shuqu.microcredit.widget.LoadingView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lv_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lv_background_color="#ffffff"
        app:lv_error_background_color="#ffffff"
        app:lv_error_info="@string/load_data_fail_try_again_after"
        app:lv_text_color="#858385"
        app:lv_text_size="15sp"
        app:lv_title="@string/data_loading_waiting" />
 
</FrameLayout>