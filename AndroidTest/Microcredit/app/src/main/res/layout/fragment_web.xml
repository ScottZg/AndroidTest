<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_view_height"
        layout="@layout/view_head"/>

    <com.shuqu.microcredit.widget.MultiSwipeRefreshLayout
        android:id="@+id/swip_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_head">

        <com.shuqu.microcredit.widget.CustomWebView
            android:id="@+id/wb_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.shuqu.microcredit.widget.MultiSwipeRefreshLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/head_view_height"
        layout="@layout/item_customer_loading"/>
</RelativeLayout>
