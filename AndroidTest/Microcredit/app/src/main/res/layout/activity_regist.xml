<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_eff2f9">

    <include layout="@layout/view_head"/>

    <View
        style="@style/horizontal_divider_content"
        android:layout_marginTop="@dimen/common_size_20px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_ll_login"
        android:dividerPadding="@dimen/common_size_14px"
        android:orientation="vertical"
        android:showDividers="middle"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_126px"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/img_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/phone_icon"
                android:layout_marginLeft="@dimen/common_size_38px"/>

            <com.shuqu.microcredit.widget.ClearEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/common_size_30px"
                android:layout_marginLeft="@dimen/common_size_76px"
                android:layout_toRightOf="@id/img_phone"
                android:background="@null"
                android:digits="0123456789"
                android:gravity="center_vertical"
                android:hint="@string/login_phone_hint"
                android:inputType="phone"
                android:maxLength="11"
                style="@style/user_text_style"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_126px">

            <ImageView
                android:id="@+id/img_yzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yzm_icon"
                android:layout_marginLeft="@dimen/common_size_38px"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_size_70px"
                android:minWidth="@dimen/common_size_180px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/common_size_30px"
                android:text="点击获取"
                android:textSize="@dimen/common_text_size_30px"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_code_bg"/>

            <com.shuqu.microcredit.widget.ClearEditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/common_size_30px"
                android:layout_marginLeft="@dimen/common_size_76px"
                android:layout_toLeftOf="@id/tv_get_code"
                android:layout_toRightOf="@id/img_yzm"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入验证码"
                android:inputType="number"
                android:maxLength="6"
                style="@style/user_text_style"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_size_126px">

            <ImageView
                android:id="@+id/img_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_size_38px"
                android:src="@mipmap/mima_icon"/>

            <ImageView
                android:id="@+id/img_pwd_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/common_size_30px"
                android:src="@mipmap/buxianshi_icon"/>

            <com.shuqu.microcredit.widget.ClearEditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/common_size_76px"
                android:layout_marginRight="@dimen/common_size_20px"
                android:layout_toLeftOf="@id/img_pwd_show"
                android:layout_toRightOf="@id/img_pwd"
                android:background="@null"
                android:digits="@string/regist_pwd"
                android:gravity="center_vertical"
                android:hint="@string/regist_pwd_hint"
                android:maxLength="12"
                android:inputType="textPassword"
                style="@style/user_text_style"/>
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/horizontal_divider_content"/>

    <TextView
        android:id="@+id/tv_regist"
        style="@style/common_btn_long"
        android:layout_marginTop="@dimen/common_size_78px"
        android:text="@string/regist_"
        android:gravity="center"

